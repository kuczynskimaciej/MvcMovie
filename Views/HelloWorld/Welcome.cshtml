@model MvcMovie.Models.QuestionModel
<h2>@Model.Question</h2>
<form>
    <ul>
        @{
            foreach (var answer in Model.Answers)
            {
                <li><input type="checkbox" /> @answer.Answer</li>
            }
        }
    </ul>
</form>


